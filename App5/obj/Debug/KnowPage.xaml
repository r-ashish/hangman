<Page 
    x:Class="HangMan.KnowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HangMan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar Background="Indigo">
            <AppBarButton x:ConnectionId='1' Icon="Back" Label="Go Back"
                                                      />
            <AppBarButton x:ConnectionId='2' Icon="Forward" Label="Check"
                                                    />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="DarkSlateBlue">
        <TextBox x:ConnectionId='3' x:Name="iKnow"
    		HorizontalAlignment="Left" 
    		Margin="102,234,0,0" 
    		TextWrapping="Wrap" 
    		Text="I know this word" 
    		VerticalAlignment="Top"
    		Width="193"                                                                          />
        <TextBlock
        	HorizontalAlignment="Left"
        	TextWrapping="Wrap"
        	Text="HangMan V 1.72"
        	VerticalAlignment="Top"
        	Height="61" Width="258"
        	Margin="83,15,0,0"
        	FontSize="30"/>


    </Grid>
</Page>

