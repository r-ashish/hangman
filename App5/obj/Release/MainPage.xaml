<Page
    x:Class="App5.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Icon="Home" Label="Home"
                                                />
            <AppBarButton x:ConnectionId='2' Icon="Forward" Label="I know"
                                                />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:Name="mainGrid">
        <Grid.Resources>
            <Storyboard x:ConnectionId='3' x:Name="show"                           >
                <DoubleAnimation 
                    Storyboard.TargetName="msgPopup"
                    Storyboard.TargetProperty="Opacity"  
                    From="1"
                    To="1"
                    Duration="0:0:1"/>
            </Storyboard>
            <Storyboard x:ConnectionId='4' x:Name="showP"                            >
                <DoubleAnimation 
                    Storyboard.TargetName="Block"
                    Storyboard.TargetProperty="Opacity"  
                    From="0"
                    To="1"
                    Duration="0:0:2"/>
            </Storyboard>
        </Grid.Resources>
        <Popup x:Name="msgPopup">
            <Grid 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Margin="160,348,0,0"
                Height="40"
                Width="204">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Gray" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <TextBlock 
                    x:Name="errorBlock" 
                    TextWrapping="Wrap" 
                    Foreground="Black"
                    TextAlignment="Center"
                    FontFamily="/Fonts/Segoe.ttf#Segoe Print"
                    Height="30" Width="194"
                    FontSize="16"/>
            </Grid>
        </Popup>

        <TextBlock
            Style="{ThemeResource TitleTextBlockStyle}" 
    		HorizontalAlignment="Center"
    		TextWrapping="Wrap"
    		Text="HangMan V 1.27"
    		VerticalAlignment="Top"
    		Height="45" Width="258"
            TextAlignment="Center"
    		Margin="0,15,0,0"
            FontFamily="/Fonts/Segoe.ttf#Segoe Print"
    		FontSize="24"/>
        <TextBlock
            x:Name="Block"
            FontFamily="/Fonts/Segoe.ttf#Segoe Print"
            HorizontalAlignment="Stretch" 
            Margin="52,65,181,278" 
            TextWrapping="Wrap" 
            Text=""
            VerticalAlignment="Stretch" FontSize="20"/>
        <TextBlock 
            x:Name="question"
            HorizontalAlignment="Center" 
            Margin="61,292,37,0" 
            TextWrapping="Wrap" 
            Text=""
            FontFamily="/Fonts/Segoe.ttf#Segoe Print"
            VerticalAlignment="Top" 
            Height="Auto" Width="Auto"
            FontSize= "18"/>
        <TextBlock x:Name="guess"
            HorizontalAlignment="Left" 
            Margin="26,348,0,200" 
            TextWrapping="Wrap" 
            FontFamily="/Fonts/Segoe.ttf#Segoe Print"
            Text="Guess a letter :" 
            VerticalAlignment="Top" 
            Height="32" Width="136"
            FontSize="16"/>
        <TextBlock 
            x:Name="chances"
            HorizontalAlignment="Right" 
            Margin="0,130,50,0" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top"
            FontFamily="/Fonts/Segoe.ttf#Segoe Print"
            FontSize="16"
            Height="30" Width="Auto"/>
        <TextBlock 
            x:Name="scoreBlock"
            HorizontalAlignment="Right" 
            Margin="0,160,80,0" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top"
            FontFamily="/Fonts/Segoe.ttf#Segoe Print"
            FontSize="16"
            Height="30" Width="Auto"/>
    </Grid>
</Page>

